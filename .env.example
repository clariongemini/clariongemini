# FulcrumOS v9.2 - Environment Variables Template
# Copy this file to .env and fill in your actual values.
# Design & Architecture by Ulaş Kaşıkcı

# ---------------------------------
# 1. Altyapı Portları ve Bilgileri
# ---------------------------------

# MySQL Veritabanı
DB_PORT=3306
MYSQL_DATABASE=fulcrumos_db
MYSQL_USER=fulcrumos_user
MYSQL_PASSWORD=secret_password
MYSQL_ROOT_PASSWORD=very_secret_root_password

# RabbitMQ Message Broker
RABBITMQ_PORT=5672
RABBITMQ_UI_PORT=15672
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest

# ---------------------------------
# 2. Arayüz ve API Portları
# ---------------------------------

# Admin UI (React/Nginx)
ADMIN_UI_PORT=3000

# Gateway Servisi (Ana API Giriş Noktası)
GATEWAY_PORT=8000
